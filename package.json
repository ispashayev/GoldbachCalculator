{
  "name": "the-curiosity-series",
  "version": "1.0.0",
  "description": "Contains client and server directories for The Curiosity Series app",
  "engines": {
    "node": "8.7.0"
  },
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon webServer.js",
    "dev": "concurrently --kill-others \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "cd client && yarn && yarn run build",
    "start": "node webServer.js"
  },
  "author": "Iskandar Pashayev",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "nodemon": "^1.17.5",
    "python-shell": "^0.5.0"
  }
}
